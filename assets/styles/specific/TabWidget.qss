QTabWidget {
    border: none;
}

QTabWidget::pane {
    border: none;
    background: transparent;
}

QTabBar {
    qproperty-expanding: true;
}

QTabBar::tab {
    border: 1px solid transparent;
    border-radius: 6px;
    background: transparent;
    color: {{neutral_060}};
    margin: 0;
    min-height: 28px;
    padding: 0px 16px;
    margin-bottom: 4px;
    margin-right: 4px;
}

QTabBar::tab:selected {
    background: {{accent_010}};
    color: {{accent_060}};
}


